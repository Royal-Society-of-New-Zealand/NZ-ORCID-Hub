[run]
branch = True
omit =
    tests/*
    orcid/*
    orcid_api/*
    venv/*
    orcid_hub/test_*.py
    main.py
    monitor.py
    orcid_hub/pyinfo.py
    initializedb.py
    orcid_hub/conftest.py
    run.py
    application.py
    config.py
    create.py
    setup.py

[report]
omit =
    tests/*
    orcid/*
    orcid_api/*
    venv/*
    orcid_hub/test_*.py
    main.py
    monitor.py
    orcid_hub/pyinfo.py
    initializedb.py
    orcid_hub/conftest.py
    run.py
    application.py
    config.py
    create.py
    setup.py

# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

ignore_errors = True
